{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2019"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": true,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
